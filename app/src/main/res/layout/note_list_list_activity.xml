<android.support.v4.widget.DrawerLayout
	android:id="@+id/note_list_list_activity"
	style="@style/Notes"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>

	<fragment
		android:id="@+id/note_list_list_activity_list_fragment"
		android:name="com.ytnuk.notes.note.list.ListFragment"
		style="@style/Notes.NoteContainer"
		android:tag="class com.ytnuk.notes.note.list.ListFragment"
		/>

	<ListView
		android:id="@+id/note_list_list_activity_list_drawer"
		android:layout_width="240dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#111"
		android:choiceMode="singleChoice"
		android:divider="@android:color/transparent"
		android:dividerHeight="0dp"
		/>
</android.support.v4.widget.DrawerLayout>
